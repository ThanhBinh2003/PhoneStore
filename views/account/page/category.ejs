<style>
  .setting-category .filter {
    width: fit-content;
    margin-bottom: 20px;
    display: flex;
  }
  .setting-category label {
    /* 1 line */
    white-space: nowrap;
    align-self: center;
    margin-right: 5px;
  }
  .setting-category .admin-category td.description {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 300px;
  }
  .setting-category .modal-content {
    min-width: 70%;
  }
</style>
<div class="container-fluid setting-category mt-3">
  <div class="d-flex justify-content-between">
    <h4>Category Management</h4>
    <button
      type="button"
      class="btn btn-primary mb-3"
      data-bs-toggle="modal"
      data-bs-target="#createCategoryModal"
    >
      Add Category
    </button>
  </div>

  <table class="table admin-category">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Category Name</th>
        <th scope="col">Description</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <!-- modal create -->
  <div
    class="modal fade"
    id="createCategoryModal"
    tabindex="-1"
    aria-labelledby="createCategoryModal"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header d-flex justify-content-between">
          <h1 class="modal-title fs-5" id="createCategoryModal">
            Create Category
          </h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3">
              <label for="name" class="form-label">Category Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Enter category name"
              />
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                class="form-control"
                id="description"
                placeholder="Enter description"
              ></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="button" class="btn btn-primary">Confirm</button>
        </div>
      </div>
    </div>
  </div>

  <!-- modal delete -->
  <div
    class="modal fade"
    id="deleteCategoryModal"
    tabindex="-1"
    aria-labelledby="deleteCategoryModal"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="deleteCategoryModal">Warning</h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this category?
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="button" class="btn btn-primary">Confirm</button>
        </div>
      </div>
    </div>
  </div>

  <!-- modal edit -->

  <div
    class="modal fade"
    id="editCategoryModal"
    tabindex="-1"
    aria-labelledby="editCategoryModal"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header d-flex justify-content-between">
          <h1 class="modal-title fs-5" id="editCategoryModal">Edit Category</h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3">
              <label for="name" class="form-label">Category Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Enter category name"
              />
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                class="form-control"
                id="description"
                placeholder="Enter description"
              ></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="button" class="btn btn-primary">Confirm</button>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  const categoryTbody = document.querySelector(".admin-category tbody")
  let listCategory = []
  let currentCategory = null
  const render = (categories) => {
    let html = ""
    categories.forEach((category, index) => {
      html += `
            <tr>
            <th scope="row">${index + 1}</th>
            <td>${category.name}</td>
            <td class="description">${category.description}</td>
            <td>
                <div class="btn btn-primary" onclick="editCategory('${index}', '${
        category._id
      }')">Edit</div>
                <div class="btn btn-danger" onclick="deleteCategory('${
                  category._id
                }')">Delete</div>
            </td>
            </tr>
        `
    })
    categoryTbody.innerHTML = html
  }

  const getCategories = async () => {
    const url = `${window.location.origin}/category`
    const limit = 10
    try {
      const res = await fetch(`${url}`)
      const data = await res.json()
      listCategory = data.data
      render(data.data)
      return data
    } catch (error) {
      console.log(error)
    }
    return data
  }

  const deleteCategory = async (id) => {
    currentCategory = id
    $("#deleteCategoryModal").modal("show")
  }

  const editCategory = (index, id) => {
    currentCategory = id
    //fill category data to modal from index
    const categoryData = listCategory[index]
    $("#editCategoryModal #name").val(categoryData.name)
    $("#editCategoryModal #slug").val(categoryData.slug)
    $("#editCategoryModal #description").val(categoryData.description)
    $("#editCategoryModal #keywords").val(categoryData.keywords)
    $("#editCategoryModal").modal("show")
  }

  const init = async () => {
    const res = await getCategories()
  }
  init()

  $(document).ready(function () {
    // delete
    $("#deleteCategoryModal").on("hidden.bs.modal", function (e) {
      currentCategory = null
    })

    $("#deleteCategoryModal .btn-primary").click(async function () {
      try {
        const res = await fetch(
          `${window.location.origin}/category/${currentCategory}`,
          {
            method: "DELETE",
          }
        )
        const data = await res.json()

        if (res.status === 200) {
          $("#deleteCategoryModal").modal("hide")
          init()
        }
      } catch (error) {
        console.log(error)
      }
    })

    // create
    $("#createCategoryModal").on("hidden.bs.modal", function (e) {
      currentCategory = null
    })

    $("#createCategoryModal .btn-primary").click(async function () {
      const body = {
        name: $("#createCategoryModal #name").val(),
        description: $("#createCategoryModal #description").val(),
      }
      try {
        const res = await fetch(`${window.location.origin}/category`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(body),
        })
        const data = await res.json()
        if (res.status === 200) {
          $("#createCategoryModal").modal("hide")
          init()
        }
      } catch (error) {
        console.log(error)
      }
    })

    // edit
    $("#editCategoryModal").on("hidden.bs.modal", function (e) {
      currentCategory = null
    })

    $("#editCategoryModal .btn-primary").click(async function () {
      try {
        const body = {
          name: $("#editCategoryModal #name").val(),
          slug: $("#editCategoryModal #slug").val(),
          description: $("#editCategoryModal #description").val(),
          keywords: $("#editCategoryModal #keywords").val(),
        }
        const res = await fetch(
          `${window.location.origin}/category/${currentCategory}`,
          {
            method: "PUT",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(body),
          }
        )
        const data = await res.json()

        if (res.status === 200) {
          $("#editCategoryModal").modal("hide")
          init()
        }
      } catch (error) {
        console.log(error)
      }
    })
  })
</script>
